---
import ToolCategoryList from '../../components/tools/ToolCategoryList';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Misc Tools - AllTools">
  <main class="container mx-auto px-4 py-12">
    <div class="mb-12 text-center max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Misc Tools</h1>
      <p class="text-gray-500">Various useful utilities that don't fit in other categories. Encryption, calculations, and more.</p>
    </div>

    <ToolCategoryList category="misc" client:load />
  </main>
</Layout>
