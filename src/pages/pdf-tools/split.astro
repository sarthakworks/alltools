---
import Layout from '../../layouts/Layout.astro';
import PDFSplitTool from '../../components/tools/pdf/PDFSplitTool';

const title = "Split PDF - Extract & Rearrange Pages";
const description = "Split PDF files, extract specific pages, or rearrange document order online.";
---

<Layout title={title}>
  <main class="container mx-auto px-4 py-12 max-w-5xl">
    <div class="mb-8 text-center">
      <a href="/pdf-tools" class="text-sm font-medium text-blue-600 hover:text-blue-700 mb-4 inline-block transition-colors bg-blue-50 px-3 py-1 rounded-full">&larr; Back to Tools</a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Split PDF</h1>
      <p class="text-gray-500">Extract pages, split documents, or rearrange order.</p>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 rounded-2xl p-6 md:p-8">
      <PDFSplitTool client:only="react" />
    </div>

    {/* SEO Content */}
    <div class="mt-24 max-w-3xl mx-auto prose prose-lg">
      <h2>How to split a PDF?</h2>
      <ol>
        <li>Upload your PDF file.</li>
        <li>Drag and drop to rearrange pages, or click the X to delete pages.</li>
        <li>Click "Save as Single PDF" to download your new custom document.</li>
        <li>Or click "Extract All as ZIP" to download every page as a separate PDF file.</li>
      </ol>
    </div>
  </main>
</Layout>
