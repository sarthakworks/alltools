---
import Layout from '../../layouts/Layout.astro';
import ImageToPDFTool from '../../components/tools/ImageToPDFTool';

const title = "Image to PDF - Convert JPG/PNG to PDF";
const description = "Convert your photos and images into a single professional PDF document.";
---

<Layout title={title}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <div class="mb-8 text-center">
      <a href="/pdf-tools" class="text-sm font-medium text-blue-600 hover:text-blue-700 mb-4 inline-block transition-colors bg-blue-50 px-3 py-1 rounded-full">&larr; Back to Tools</a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Image to PDF</h1>
      <p class="text-gray-500">Convert JPG, PNG, and other images to PDF.</p>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 rounded-2xl p-6 md:p-8">
      <ImageToPDFTool client:only="react" />
    </div>

    {/* SEO Content */}
    <div class="mt-24 max-w-3xl mx-auto prose prose-lg">
      <h2>How to convert images to PDF?</h2>
      <ol>
        <li>Upload your images (JPG, PNG).</li>
        <li>Drag and drop to arrange the order of pages.</li>
        <li>Click "Convert to PDF" to generate your document.</li>
      </ol>
    </div>
  </main>
</Layout>
