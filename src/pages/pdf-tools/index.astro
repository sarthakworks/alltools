---
import Layout from '../../layouts/Layout.astro';

const tools = [
  {
    title: "Merge PDFs",
    description: "Combine multiple PDF files into one document.",
    href: "/pdf-tools/merge",
    icon: "combine",
    color: "bg-red-50 text-red-600"
  },
  {
    title: "PDF to Image",
    description: "Convert PDF pages to JPG or PNG images.",
    href: "/pdf-tools/to-image",
    icon: "image",
    color: "bg-orange-50 text-orange-600"
  },
  {
    title: "Combine Images to PDF",
    description: "Convert JPGs and PNGs into a single PDF file.",
    href: "/pdf-tools/image-to-pdf",
    icon: "img2pdf",
    color: "bg-blue-50 text-blue-600"
  },
  {
      title: "Split PDF",
      description: "Extract pages or split your PDF into multiple files.",
      href: "/pdf-tools/split",
      icon: "split",
      color: "bg-purple-50 text-purple-600"
  },
  {
      title: "Compress PDF",
      description: "Reduce file size while optimizing for quality.",
      href: "/pdf-tools/compress",
      icon: "compress",
      color: "bg-green-50 text-green-600"
  },
  {
      title: "Lock / Unlock PDF",
      description: "Add passwords to PDF or remove protections.",
      href: "/pdf-tools/lock-unlock",
      icon: "lock",
      color: "bg-indigo-50 text-indigo-600"
  }
];
---

<Layout title="PDF Tools - AllTools">
  <main class="container mx-auto px-4 py-12">
    <div class="mb-12 text-center max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">PDF Tools</h1>
      <p class="text-gray-500">Secure, client-side PDF manipulation directly in your browser. Files never leave your device.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {tools.map(tool => (
        <a href={tool.href} class="block p-8 rounded-2xl bg-white shadow-sm border border-gray-100 hover:shadow-md hover:-translate-y-1 transition-all group">
           <div class={`w-12 h-12 ${tool.color} rounded-lg flex items-center justify-center mb-6`}>
              {tool.icon === 'combine' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-files"><path d="M20 7h-3a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h3a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2Z"/><path d="M9 22h-3a2 2 0 0 1-2-2v-10a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2Z"/></svg>}
              {tool.icon === 'image' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-image"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>}
              {tool.icon === 'compress' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-minimize-2"><polyline points="4 14 10 14 10 20"/><polyline points="20 10 14 10 14 4"/><line x1="14" y1="10" x2="21" y2="3"/><line x1="3" y1="21" x2="10" y2="14"/></svg>}
              {tool.icon === 'lock' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-lock"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>}
              {tool.icon === 'split' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-scissors"><circle cx="6" cy="6" r="3"/><circle cx="6" cy="18" r="3"/><line x1="20" y1="4" x2="8.12" y2="15.88"/><line x1="14.47" y1="14.48" x2="20" y2="20"/><line x1="8.12" y1="8.12" x2="12" y2="12"/></svg>}
              {tool.icon === 'img2pdf' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file-image"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><circle cx="10" cy="13" r="2"/><path d="m20 17-1.09-1.09a2 2 0 0 0-2.82 0L10 22"/></svg>}
           </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">{tool.title}</h3>
          <p class="text-gray-500 text-sm leading-relaxed">{tool.description}</p>
        </a>
      ))}
    </div>
  </main>
</Layout>
