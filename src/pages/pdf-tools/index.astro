---
import ToolCategoryList from '../../components/tools/ToolCategoryList';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="PDF Tools - AllTools">
  <main class="container mx-auto px-4 py-12">
    <div class="mb-12 text-center max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">PDF Tools</h1>
      <p class="text-gray-500">Essential tools for working with PDF files. Merge, split, compress, and convert PDFs securely in your browser.</p>
    </div>

    <ToolCategoryList category="pdf" client:load />
  </main>
</Layout>
