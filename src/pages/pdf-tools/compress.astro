---
import Layout from '../../layouts/Layout.astro';
import PDFCompressTool from '../../components/tools/PDFCompressTool';

const title = "Compress PDF - Reduce PDF File Size Online";
const description = "Reduce the file size of your PDF documents online for free. Choose from 3 compression levels.";
---

<Layout title={title}>
  <main class="container mx-auto px-4 py-12 max-w-5xl">
    <div class="mb-8 text-center">
      <a href="/pdf-tools" class="text-sm font-medium text-blue-600 hover:text-blue-700 mb-4 inline-block transition-colors bg-blue-50 px-3 py-1 rounded-full">&larr; Back to Tools</a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Compress PDF</h1>
      <p class="text-gray-500">Reduce your PDF file size while maintaining good quality.</p>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 rounded-2xl p-6 md:p-8">
      <PDFCompressTool client:only="react" />
    </div>

    {/* SEO Content */}
    <div class="mt-24 max-w-3xl mx-auto prose prose-lg">
      <h2>How to compress a PDF file?</h2>
      <ol>
        <li>Upload your PDF file.</li>
        <li>Select your desired compression level (Extreme, Recommended, High Quality).</li>
        <li>Click "Compress PDF" and wait for the process to finish.</li>
        <li>Download your smaller PDF file instantly.</li>
      </ol>
    </div>
  </main>
</Layout>
