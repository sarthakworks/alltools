---
import ToolCategoryList from '../../components/tools/ToolCategoryList';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Coding Tools - AllTools">
  <main class="container mx-auto px-4 py-12">
    <div class="mb-12 text-center max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Coding Tools</h1>
      <p class="text-gray-500">Essential tools for developers. Format, validate, and convert code directly in your browser. Fast, secure, and client-side.</p>
    </div>

    <ToolCategoryList category="coding" client:load />
  </main>
</Layout>
