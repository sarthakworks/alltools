---
import Layout from '../../layouts/Layout.astro';
import AIEssayWriter from '../../components/tools/AIEssayWriter';
---

<Layout title="AI Essay Writer - AllTools" description="Write academic essays offline with AI. Free, private, and secure.">

  <main class="container mx-auto px-4 py-12 max-w-5xl">
    <div class="mb-8 text-center">
      <a href="/ai-tools" class="text-sm font-medium text-indigo-600 hover:text-indigo-700 mb-4 inline-block transition-colors bg-indigo-50 px-3 py-1 rounded-full">&larr; Back to Tools</a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">AI Essay Writer</h1>
      <p class="text-gray-500">Generate structured academic essays privately on your device.</p>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 rounded-2xl p-6 md:p-8">
      <AIEssayWriter client:load />
    </div>
  </main>
</Layout>
