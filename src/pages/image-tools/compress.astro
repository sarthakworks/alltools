---
import Layout from '../../layouts/Layout.astro';
import ImageCompressorTool from '../../components/tools/image/ImageCompressorTool';
---

<Layout title="Compress Images - AllTools" description="Free online image compressor. Reduce JPG, PNG, WebP size without losing quality.">

  <main class="container mx-auto px-4 py-12">
    <div class="mb-8 text-center">
      <a href="/image-tools" class="text-sm font-medium text-blue-600 hover:text-blue-700 mb-4 inline-block transition-colors bg-blue-50 px-3 py-1 rounded-full">&larr; Back to Tools</a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Compress Image</h1>
      <p class="text-gray-500">Optimize your images for the web. Fast, secure, and purely client-side.</p>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 rounded-2xl p-6 md:p-8">
      <ImageCompressorTool client:only="react" />
    </div>
  </main>
</Layout>
