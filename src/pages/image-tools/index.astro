---
import ToolCategoryList from '../../components/tools/ToolCategoryList';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Image Tools - AllTools">
  <main class="container mx-auto px-4 py-12">
    <div class="mb-12 text-center max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Image Tools</h1>
      <p class="text-gray-500">Process images right in your browser. Compress, resize, convert and edit images securely without uploading to any server.</p>
    </div>

    <ToolCategoryList category="image" client:load />
  </main>
</Layout>
