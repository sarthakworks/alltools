---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import ImageResizerTool from '../../components/tools/ImageResizerTool';
---

<Layout title="Resize Images - AllTools" description="Resize JPG, PNG, WebP images online for free. Change dimensions while maintaining quality.">
  <Header />
  <main class="container mx-auto px-4 py-12 max-w-6xl">
    <div class="mb-8 text-center">
      <a href="/image-tools" class="text-sm font-medium text-blue-600 hover:text-blue-700 mb-4 inline-block transition-colors bg-blue-50 px-3 py-1 rounded-full">&larr; Back to Tools</a>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Resize Image</h1>
      <p class="text-gray-500">Change image dimensions in seconds. High quality resizing.</p>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 rounded-2xl p-6 md:p-8">
      <ImageResizerTool client:only="react" />
    </div>
  </main>
</Layout>
