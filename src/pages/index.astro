---
import Layout from '../layouts/Layout.astro';
import ToolsGrid from '../components/ToolsGrid';
import { categories, stats } from '../data/tools';
import { Search, ArrowRight, FileText, Image as ImageIcon, Zap, CheckCircle, Shield, PenTool } from 'lucide-react';

---

<Layout title="AllTools - Free PDF, Image, Video & AI Tools">
  <main class="min-h-[calc(100vh-4rem)]">
    
    {/* Hero Section */}
    <section class="bg-white pt-20 pb-24 text-center px-4 relative overflow-hidden">
        {/* Floating Background Shapes */}
        <div class="absolute top-20 left-10 w-12 h-12 bg-yellow-400 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute top-40 right-20 w-8 h-8 bg-blue-500 rotate-45 opacity-20"></div>
        <div class="absolute bottom-10 left-1/4 w-4 h-4 bg-red-400 rounded-full opacity-30"></div>

        <div class="relative z-10 max-w-7xl mx-auto">
          <h1 class="text-5xl md:text-7xl font-extrabold text-[#111827] mb-6 tracking-tight leading-tight">
            Free Tools to Make <br class="md:hidden" />
            <span id="typewriter-word" class="text-blue-600 bg-blue-50 px-2 rounded-lg inline-block transition-all duration-500 ease-in-out">
              Education
            </span> Simple
          </h1>
          <p class="text-gray-500 text-lg md:text-xl mb-10 max-w-2xl mx-auto">
            We offer PDF, video, image and other online tools to make your life easier
          </p>

          {/* Search Bar */}
          <div class="max-w-2xl mx-auto relative mb-16 px-4">
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 pl-6 flex items-center pointer-events-none">
                 <Search className="h-6 w-6 text-blue-500" />
              </div>
              <input
                type="text"
                placeholder="Search"
                class="w-full pl-16 pr-32 py-5 rounded-full border border-gray-200 shadow-lg shadow-blue-500/5 text-lg focus:outline-none focus:ring-4 focus:ring-blue-100 focus:border-blue-500 transition-all"
              />
              <button class="absolute right-2 top-2 bottom-2 bg-blue-600 text-white px-8 rounded-full font-semibold hover:bg-blue-700 transition-colors shadow-md">
                Search
              </button>
            </div>
          </div>

          {/* Category Cards */}
          {/* Category Cards */}
          <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6 max-w-7xl mx-auto px-4 mt-16 text-left">
            {categories.map((cat) => (
              <a href={cat.href} class="group flex flex-col rounded-3xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div class={`${cat.color} p-6 h-42 relative flex flex-col justify-between`}>
                  <div class="flex justify-between items-start">
                    <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center text-white">
                      <cat.icon className="w-5 h-5" />
                    </div>
                    {cat.count && (
                      <span class="px-2.5 py-1 bg-white/20 backdrop-blur-sm rounded-full text-[10px] font-bold text-white tracking-wide">{cat.count}</span>
                    )}
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-white mb-0.5">{cat.name}</h3>
                    <div class="flex justify-between items-end">
                      <p class="text-white/80 text-xs leading-none">{cat.desc}</p>
                      <ArrowRight className="text-white w-4 h-4 opacity-75 group-hover:translate-x-1 transition-transform" />
                    </div>
                  </div>
                </div>
                {cat.featured && (
                  <div class={`${cat.lightColor || 'bg-gray-50'} p-4 flex justify-between items-center h-16`}>
                    <div class="flex flex-col">
                       <span class="text-gray-400 text-[10px] font-bold uppercase tracking-wider leading-tight">Featured</span>
                       <span class="text-gray-400 text-[10px] font-bold uppercase tracking-wider leading-tight">Tool :</span>
                    </div>
                    <span class={`text-[10px] font-bold bg-white px-3 py-2 rounded-xl shadow-sm hover:shadow-md transition-all truncate text-center min-w-[90px] ${cat.color.replace('bg-', 'text-').replace('[#', 'text-[#')}`}>
                      {cat.featured.name}
                    </span>
                  </div>
                )}
              </a>
            ))}
          </div>
        </div>
    </section>

    {/* Stats Bar */}
    <div class="bg-[#f3f7fa] border-y border-gray-100 py-8">
        <div class="container mx-auto px-4">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 divide-x divide-gray-200/50">
            {stats.map((stat) => (
              <div class="text-center px-4">
                <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-1">{stat.value}</div>
                <div class="text-xs md:text-sm font-semibold text-gray-400 uppercase tracking-widest">{stat.label}</div>
              </div>
            ))}
          </div>
        </div>
    </div>

    {/* Popular Tools Section (Values Interactivity) */}
    <section class="bg-gray-50 py-24">
        <div class="container mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Most Popular Tools</h2>
            <p class="text-gray-500">We present the best of the best. All free, no catch.</p>
          </div>

          {/* React Island for Filtering */}
          <ToolsGrid client:visible />
          
        </div>
    </section>

   {/* Free Tools You'd Usually Pay For */}
      <section class="bg-white py-24 border-t border-gray-100">
        <div class="container mx-auto px-4">
          <div class="flex flex-col md:flex-row justify-between md:items-end mb-12 max-w-6xl mx-auto gap-4">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Free Tools Youâ€™d Usually Pay For</h2>
              <p class="text-gray-500">No limits, No Sign-ups</p>
            </div>
            <div class="flex gap-2">
              <button class="p-2 rounded-full border border-gray-100 hover:bg-gray-50" aria-label="Previous"><ArrowRight className="w-5 h-5 rotate-180 text-gray-400" /></button>
              <button class="p-2 rounded-full bg-blue-600 text-white" aria-label="Next"><ArrowRight className="w-5 h-5" /></button>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {/* Feature Cards */}
            <div class="bg-blue-50 rounded-3xl p-8 h-80 relative overflow-hidden group hover:shadow-lg transition-all cursor-pointer">
              <div class="relative z-10">
                 <div class="w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center mb-6 text-blue-600">
                    <FileText className="w-6 h-6" />
                 </div>
                 <h3 class="text-2xl font-bold text-gray-900 mb-2">PDF Creator</h3>
                 <p class="text-gray-600 text-sm mb-6">Create PDFs quickly and easily with our free PDF creator.</p>
                 <span class="text-blue-600 font-semibold text-sm flex items-center gap-1 group-hover:translate-x-1 transition-transform">
                   Start Creating <ArrowRight className="w-4 h-4" />
                 </span>
              </div>
              <div class="absolute top-1/2 right-[-50px] w-64 h-64 bg-white/40 rounded-full blur-3xl group-hover:bg-white/60 transition-colors"></div>
            </div>

            <div class="bg-purple-50 rounded-3xl p-8 h-80 relative overflow-hidden group hover:shadow-lg transition-all cursor-pointer">
              <div class="relative z-10">
                 <div class="w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center mb-6 text-purple-600">
                    <ImageIcon className="w-6 h-6" />
                 </div>
                 <h3 class="text-2xl font-bold text-gray-900 mb-2">Background Remover</h3>
                 <p class="text-gray-600 text-sm mb-6">Remove or change the background of a photo automatically.</p>
                 <span class="text-purple-600 font-semibold text-sm flex items-center gap-1 group-hover:translate-x-1 transition-transform">
                   Remove BG <ArrowRight className="w-4 h-4" />
                 </span>
              </div>
              <div class="absolute bottom-0 right-0 w-40 h-40 bg-purple-200/30 rounded-full blur-2xl"></div>
            </div>

            <div class="bg-green-50 rounded-3xl p-8 h-80 relative overflow-hidden group hover:shadow-lg transition-all cursor-pointer">
              <div class="relative z-10">
                 <div class="w-12 h-12 bg-white rounded-xl shadow-sm flex items-center justify-center mb-6 text-green-600">
                    <Zap className="w-6 h-6" />
                 </div>
                 <h3 class="text-2xl font-bold text-gray-900 mb-2">Photo Cleanup</h3>
                 <p class="text-gray-600 text-sm mb-6">Use AI to remove unwanted objects, texts, people from an image.</p>
                 <span class="text-green-600 font-semibold text-sm flex items-center gap-1 group-hover:translate-x-1 transition-transform">
                   Clean Photo <ArrowRight className="w-4 h-4" />
                 </span>
              </div>
              <div class="absolute top-0 right-[-20px] w-32 h-32 bg-green-200/40 rounded-full blur-xl"></div>
            </div>
          </div>
        </div>
      </section>

      {/* Premium CTA Section */}
      <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-24 overflow-hidden relative">
        <div class="container mx-auto px-4 relative z-10 flex flex-col md:flex-row items-center justify-between gap-12 max-w-6xl mx-auto">
          <div class="max-w-xl">
            <h2 class="text-4xl font-bold mb-4">Get more with Premium</h2>
            <p class="text-blue-100 text-lg mb-8 leading-relaxed">
              Keep your projects further with premium tools that stay out of your way and work smarter. Create without limits, ads, or roadblocks. Get started for just $3.99 a month.
            </p>
            <div class="flex flex-wrap gap-4 mb-8">
               <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full text-sm font-medium">
                 <Shield className="w-4 h-4" /> Ad-free
               </div>
               <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full text-sm font-medium">
                 <CheckCircle className="w-4 h-4" /> Unlimited usage
               </div>
               <div class="flex items-center gap-2 bg-white/10 px-4 py-2 rounded-full text-sm font-medium">
                 <Zap className="w-4 h-4" /> Faster processing
               </div>
            </div>
            <button class="bg-white text-blue-700 font-bold px-8 py-3 rounded-xl shadow-lg hover:bg-blue-50 transition-colors">
              Get Started
            </button>
          </div>
          
          {/* Visual Illustration */}
          <div class="hidden md:block w-[500px] h-[300px] bg-white/10 rounded-2xl border border-white/20 backdrop-blur-sm p-6 relative">
             <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-center">
               <div class="w-20 h-20 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4 shadow-xl">
                 <PenTool className="w-10 h-10 text-white" />
               </div>
               <div class="w-32 h-4 bg-white/20 rounded-full mx-auto mb-2"></div>
               <div class="w-24 h-4 bg-white/10 rounded-full mx-auto"></div>
             </div>
             {/* Floating elements */}
             <div class="absolute top-10 left-10 w-12 h-12 bg-white rounded-lg shadow-lg flex items-center justify-center text-red-500 transform rotate-12"><FileText size={20} /></div>
             <div class="absolute bottom-10 right-10 w-12 h-12 bg-white rounded-lg shadow-lg flex items-center justify-center text-green-500 transform -rotate-12"><ImageIcon size={20} /></div>
             <div class="absolute top-1/4 right-8 w-10 h-10 bg-white/20 rounded-full"></div>
          </div>
        </div>
      </section>

  </main>
</Layout>

<script>
  // Simple Typewriter Effect
  const words = ['Education', 'Business', 'Life', 'Work', 'Creativity'];
  let index = 0;
  const element = document.getElementById('typewriter-word');
  
  if (element) {
    setInterval(() => {
        index = (index + 1) % words.length;
        // Fade out
        element.style.opacity = '0';
        element.style.transform = 'translateY(10px)';
        
        setTimeout(() => {
            // Change text
            element.textContent = words[index];
            // Fade in
            element.style.opacity = '1';
             element.style.transform = 'translateY(0)';
        }, 500); // Wait for fade out
        
    }, 3000);
  }
</script>
